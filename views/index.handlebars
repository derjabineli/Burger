<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="https://library.kissclipart.com/20181003/tse/kissclipart-bobs-burgers-collector-clips-clipart-hamburger-th-bdd64cf4f5c0e051.jpg"
                alt="burger">
            <h1>Eat-da-burger</h1>
        </div>
        <div class="col-md-6 text-center task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}
                    </pre>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <form class="devour-form button-size">
                    <input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                    <button type="submit" class="btn btn-default">Eat it!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>